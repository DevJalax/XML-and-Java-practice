<?xml version = "1.8" encoding="UTF-8"?>
<RelativeLayout 
 xmlns:android = "http://schemas.android.com/apk/res/android"
 xml:tools = "http://schemas.android.com/tools"
 android:layout_width = "match_parent"
 android:layout_height = "match_parent"
 android:text = "Thrifty"
 android:background = "@drawable/bg"
 tools:context = ".MainActivity"
 />

<LinearLayout>
 <ImageView
  android:layout_gravity = "center"
  android:layout_width = "48dp"
  android:layout_height = "48dp"
  android:src = "@drawable/google"
  android:id = " @+id/img"
  />

 <Textview
  android:layout_width = "wrap_content"
  android:layout_height = "wrap_content"
  android:text = "or"
  android:id = " @+id/t1"
  android:layout_alignBottom = "@+id/img"
  android:layout_marginBottom = "10dp"
  />

  <Textview
   android:layout_width = "wrap_content"
   android:layout_height = "wrap_content"
   android:text = "Username :"
   android:id = " @+id/t2"
   android:layout_alignLeft = "true"
   android:layout_below = "@+id/t1"
   android:layout_marginBottom = "5dp"
   />

   <EditText
    android:layout_width = "wrap_content"
    android:layout_height = "wrap_content"
    android:id = "@+id/et1"
    android:layout_alignRight = "@+id/t2"/>

    <Textview
     android:layout_width = "wrap_content"
     android:layout_height = "wrap_content"
     android:text = "Password : :"
     android:id = " @+id/t3"
     android:layout_alignLeft = "true"
     android:layout_below = "@+id/t2"
     android:layout_marginBottom = "5dp"/>

    <EditText
    android:layout_width = "wrap_content"
    android:layout_height = "wrap_content"
    android:id = "@+id/et2"
    android:layout_alignRight = "@+id/t3"/>

    <Button
    android:layout_width = "wrap_content"
    android:layout_height = "wrap_content"
    android:id = "@+id/b1"
    android:text = "Login"
    android:layout_alignBottom = "@+id/t3"/>

    <Button
    android:layout_width = "wrap_content"
    android:layout_height = "wrap_content"
    android:id = "@+id/b2"
    android:text = "New user"
    android:layout_alignRight = "@+id/b1"/>

    </LinearLayout>
    </RelativeLayout>